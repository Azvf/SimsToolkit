<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style Selector="Window">
        <Setter Property="Background" Value="{DynamicResource Brush.AppBackground}" />
        <Setter Property="Foreground" Value="{DynamicResource Brush.TextPrimary}" />
    </Style>

    <Style Selector="Border.card">
        <Setter Property="Background" Value="{DynamicResource Brush.Surface}" />
        <Setter Property="BorderBrush" Value="{DynamicResource Brush.Border}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="{DynamicResource Radius.Medium}" />
    </Style>

    <Style Selector="Border.card-muted">
        <Setter Property="Background" Value="{DynamicResource Brush.SurfaceMuted}" />
        <Setter Property="BorderBrush" Value="{DynamicResource Brush.Border}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="{DynamicResource Radius.Small}" />
    </Style>

    <Style Selector="TextBox, ComboBox, Button">
        <Setter Property="Height" Value="{DynamicResource Size.ControlHeight}" />
    </Style>

    <Style Selector="TextBox, ComboBox">
        <Setter Property="Background" Value="{DynamicResource Brush.SurfaceMuted}" />
        <Setter Property="BorderBrush" Value="{DynamicResource Brush.Border}" />
        <Setter Property="Foreground" Value="{DynamicResource Brush.TextPrimary}" />
    </Style>

    <Style Selector="TextBox:pointerover, ComboBox:pointerover">
        <Setter Property="Background" Value="{DynamicResource Brush.SurfaceHover}" />
        <Setter Property="BorderBrush" Value="{DynamicResource Brush.BorderHover}" />
    </Style>

    <Style Selector="TextBox:focus, ComboBox:focus, TextBox:focus-within, ComboBox:focus-within">
        <Setter Property="BorderBrush" Value="{DynamicResource Brush.BorderFocus}" />
    </Style>

    <Style Selector="TextBox.path-field">
        <Setter Property="FontFamily" Value="Consolas, Cascadia Mono, JetBrains Mono" />
    </Style>

    <Style Selector="TextBox.log-output">
        <Setter Property="FontFamily" Value="Consolas, Cascadia Mono, JetBrains Mono" />
        <Setter Property="Background" Value="{DynamicResource Brush.LogBackground}" />
    </Style>

    <Style Selector="Button">
        <Setter Property="Background" Value="{DynamicResource Brush.SurfaceMuted}" />
        <Setter Property="BorderBrush" Value="{DynamicResource Brush.Border}" />
        <Setter Property="Foreground" Value="{DynamicResource Brush.TextPrimary}" />
    </Style>

    <Style Selector="Button:pointerover">
        <Setter Property="Background" Value="{DynamicResource Brush.SurfaceHover}" />
        <Setter Property="BorderBrush" Value="{DynamicResource Brush.BorderHover}" />
    </Style>

    <Style Selector="Button:pressed">
        <Setter Property="Background" Value="{DynamicResource Brush.SurfacePressed}" />
        <Setter Property="BorderBrush" Value="{DynamicResource Brush.BorderFocus}" />
    </Style>

    <Style Selector="Button:focus, Button:focus-visible">
        <Setter Property="BorderBrush" Value="{DynamicResource Brush.BorderFocus}" />
    </Style>

    <Style Selector="Button.primary">
        <Setter Property="Background" Value="{DynamicResource Brush.Accent}" />
        <Setter Property="BorderBrush" Value="{DynamicResource Brush.Accent}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="FontWeight" Value="SemiBold" />
    </Style>

    <Style Selector="Button.primary:pointerover">
        <Setter Property="Background" Value="{DynamicResource Brush.AccentHover}" />
        <Setter Property="BorderBrush" Value="{DynamicResource Brush.AccentHover}" />
        <Setter Property="Foreground" Value="White" />
    </Style>

    <Style Selector="Button.primary:pressed">
        <Setter Property="Background" Value="{DynamicResource Brush.AccentPressed}" />
        <Setter Property="BorderBrush" Value="{DynamicResource Brush.AccentPressed}" />
        <Setter Property="Foreground" Value="White" />
    </Style>

    <Style Selector="Button.primary:focus, Button.primary:focus-visible">
        <Setter Property="BorderBrush" Value="{DynamicResource Brush.AccentHover}" />
        <Setter Property="Foreground" Value="White" />
    </Style>

    <Style Selector="Button.secondary">
        <Setter Property="Background" Value="{DynamicResource Brush.Surface}" />
    </Style>

    <Style Selector="Button.secondary:pointerover">
        <Setter Property="Background" Value="{DynamicResource Brush.AccentMutedHover}" />
        <Setter Property="BorderBrush" Value="{DynamicResource Brush.BorderFocus}" />
    </Style>

    <Style Selector="Button.secondary:pressed">
        <Setter Property="Background" Value="{DynamicResource Brush.AccentMutedPressed}" />
        <Setter Property="BorderBrush" Value="{DynamicResource Brush.BorderFocus}" />
    </Style>

    <Style Selector="Button.secondary:focus, Button.secondary:focus-visible">
        <Setter Property="BorderBrush" Value="{DynamicResource Brush.BorderFocus}" />
    </Style>

    <Style Selector="Button.nav-active">
        <Setter Property="Background" Value="{DynamicResource Brush.AccentMuted}" />
        <Setter Property="BorderBrush" Value="{DynamicResource Brush.Accent}" />
        <Setter Property="Foreground" Value="{DynamicResource Brush.Accent}" />
        <Setter Property="FontWeight" Value="SemiBold" />
    </Style>

    <Style Selector="Button.nav-active:pointerover">
        <Setter Property="Background" Value="{DynamicResource Brush.AccentMutedHover}" />
        <Setter Property="BorderBrush" Value="{DynamicResource Brush.AccentHover}" />
        <Setter Property="Foreground" Value="{DynamicResource Brush.Accent}" />
    </Style>

    <Style Selector="Button.nav-active:pressed">
        <Setter Property="Background" Value="{DynamicResource Brush.AccentMutedPressed}" />
        <Setter Property="BorderBrush" Value="{DynamicResource Brush.AccentPressed}" />
        <Setter Property="Foreground" Value="{DynamicResource Brush.Accent}" />
    </Style>

    <Style Selector="Button.danger">
        <Setter Property="Background" Value="{DynamicResource Brush.Danger}" />
        <Setter Property="BorderBrush" Value="{DynamicResource Brush.Danger}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="FontWeight" Value="SemiBold" />
    </Style>

    <Style Selector="Button.danger:pointerover">
        <Setter Property="Background" Value="{DynamicResource Brush.DangerHover}" />
        <Setter Property="BorderBrush" Value="{DynamicResource Brush.DangerHover}" />
        <Setter Property="Foreground" Value="White" />
    </Style>

    <Style Selector="Button.danger:pressed">
        <Setter Property="Background" Value="{DynamicResource Brush.DangerPressed}" />
        <Setter Property="BorderBrush" Value="{DynamicResource Brush.DangerPressed}" />
        <Setter Property="Foreground" Value="White" />
    </Style>

    <Style Selector="CheckBox">
        <Setter Property="Foreground" Value="{DynamicResource Brush.TextPrimary}" />
    </Style>

    <Style Selector="CheckBox:pointerover">
        <Setter Property="Foreground" Value="{DynamicResource Brush.Accent}" />
    </Style>

    <Style Selector="ProgressBar">
        <Setter Property="Foreground" Value="{DynamicResource Brush.Accent}" />
    </Style>

    <Style Selector="ListBox">
        <Setter Property="Background" Value="{DynamicResource Brush.SurfaceMuted}" />
        <Setter Property="BorderBrush" Value="{DynamicResource Brush.Border}" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>

    <Style Selector="ListBoxItem:pointerover">
        <Setter Property="Background" Value="{DynamicResource Brush.ListItemHover}" />
        <Setter Property="BorderBrush" Value="{DynamicResource Brush.BorderHover}" />
    </Style>

    <Style Selector="ListBoxItem:pressed">
        <Setter Property="Background" Value="{DynamicResource Brush.ListItemPressed}" />
        <Setter Property="BorderBrush" Value="{DynamicResource Brush.BorderFocus}" />
    </Style>

    <Style Selector="ListBoxItem:selected, ListBoxItem:selected:pointerover">
        <Setter Property="Background" Value="{DynamicResource Brush.ListItemSelected}" />
        <Setter Property="BorderBrush" Value="{DynamicResource Brush.BorderFocus}" />
    </Style>
</Styles>

