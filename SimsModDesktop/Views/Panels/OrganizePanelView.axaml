<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:SimsModDesktop.ViewModels"
             x:Class="SimsModDesktop.Views.Panels.OrganizePanelView"
             x:DataType="vm:MainWindowViewModel">
    <Border Classes="card-muted" Padding="10" IsVisible="{Binding IsOrganizeVisible}">
        <StackPanel Spacing="10">
            <TextBlock Classes="section-title" Text="整理压缩包 (organize)" />
            <Grid ColumnDefinitions="180,*,Auto"
                  RowDefinitions="Auto,Auto,Auto"
                  RowSpacing="8"
                  ColumnSpacing="8">
                <TextBlock Grid.Row="0" VerticalAlignment="Center" Text="源目录 (SourceDir)" />
                <TextBox Grid.Row="0" Grid.Column="1" Classes="path-field" Text="{Binding Organize.SourceDir}" />
                <Button Grid.Row="0" Grid.Column="2" Content="Browse" Command="{Binding BrowseFolderCommand}" CommandParameter="SourceDir" />

                <TextBlock Grid.Row="1" VerticalAlignment="Center" Text="Mods 根目录 (ModsRoot)" />
                <TextBox Grid.Row="1" Grid.Column="1" Classes="path-field" Text="{Binding Organize.ModsRoot}" />
                <Button Grid.Row="1" Grid.Column="2" Content="Browse" Command="{Binding BrowseFolderCommand}" CommandParameter="ModsRoot" />

                <TextBlock Grid.Row="2" VerticalAlignment="Center" Text="托盘目录 (TrayRoot)" />
                <TextBox Grid.Row="2" Grid.Column="1" Classes="path-field" Text="{Binding Organize.TrayRoot}" />
                <Button Grid.Row="2" Grid.Column="2" Content="Browse" Command="{Binding BrowseFolderCommand}" CommandParameter="TrayRoot" />
            </Grid>

            <Border Classes="card" Padding="10" Margin="0,8,0,0" IsVisible="{Binding IsToolkitAdvancedOpen}">
                <Grid ColumnDefinitions="180,*"
                      RowDefinitions="Auto,Auto,Auto"
                      RowSpacing="8"
                      ColumnSpacing="8">
                    <TextBlock Grid.Row="0" VerticalAlignment="Center" Text="Zip 匹配模式 (ZipNamePattern)" />
                    <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Organize.ZipNamePattern}" />

                    <TextBlock Grid.Row="1" VerticalAlignment="Center" Text="统一目录名 (UnifiedModsFolder)" />
                    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Organize.UnifiedModsFolder}" />

                    <CheckBox Grid.Row="2" Grid.Column="1" Content="保留压缩包 (KeepZip)" IsChecked="{Binding Organize.KeepZip}" />
                </Grid>
            </Border>
        </StackPanel>
    </Border>
</UserControl>


