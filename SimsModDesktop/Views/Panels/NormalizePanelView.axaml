<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:SimsModDesktop.ViewModels"
             x:Class="SimsModDesktop.Views.Panels.NormalizePanelView"
             x:DataType="vm:MainWindowViewModel">
    <Border Padding="10" BorderBrush="#24313B" BorderThickness="1" CornerRadius="6" IsVisible="{Binding IsNormalizeVisible}">
        <StackPanel Spacing="10">
            <TextBlock FontWeight="SemiBold" Text="normalize" />
            <Grid ColumnDefinitions="180,*,Auto" RowDefinitions="Auto" RowSpacing="8" ColumnSpacing="8">
                <TextBlock Grid.Row="0" VerticalAlignment="Center" Text="NormalizeRootPath" />
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Normalize.RootPath}" />
                <Button Grid.Row="0" Grid.Column="2" Content="Browse" Command="{Binding BrowseFolderCommand}" CommandParameter="NormalizeRootPath" />
            </Grid>
        </StackPanel>
    </Border>
</UserControl>
