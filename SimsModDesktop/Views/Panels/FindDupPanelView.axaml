<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:SimsModDesktop.ViewModels"
             x:Class="SimsModDesktop.Views.Panels.FindDupPanelView"
             x:DataType="vm:MainWindowViewModel">
    <Border Padding="10" BorderBrush="#24313B" BorderThickness="1" CornerRadius="6" IsVisible="{Binding IsFindDupVisible}">
        <StackPanel Spacing="10">
            <TextBlock FontWeight="SemiBold" Text="finddup (MD5 duplicate scan)" />
            <Grid ColumnDefinitions="180,*,Auto"
                  RowDefinitions="Auto,Auto,Auto,Auto"
                  RowSpacing="8"
                  ColumnSpacing="8">
                <TextBlock Grid.Row="0" VerticalAlignment="Center" Text="FindDupRootPath" />
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding FindDup.RootPath}" />
                <Button Grid.Row="0" Grid.Column="2" Content="Browse" Command="{Binding BrowseFolderCommand}" CommandParameter="FindDupRootPath" />

                <TextBlock Grid.Row="1" VerticalAlignment="Center" Text="OutputCsv (optional)" />
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding FindDup.OutputCsv}" />
                <Button Grid.Row="1" Grid.Column="2" Content="Browse" Command="{Binding BrowseCsvPathCommand}" CommandParameter="FindDupOutputCsv" />

                <CheckBox Grid.Row="2" Grid.Column="1" Content="Recurse subdirectories" IsChecked="{Binding FindDup.Recurse}" />
                <CheckBox Grid.Row="3" Grid.Column="1" Content="Cleanup: remove duplicate files (keep first by path)" IsChecked="{Binding FindDup.Cleanup}" />
            </Grid>
        </StackPanel>
    </Border>
</UserControl>
