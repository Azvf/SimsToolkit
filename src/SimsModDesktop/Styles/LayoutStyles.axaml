<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style Selector="TextBlock.app-title">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{DynamicResource Brush.TextPrimary}" />
    </Style>

    <Style Selector="TextBlock.section-title">
        <Setter Property="FontSize" Value="15" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{DynamicResource Brush.TextPrimary}" />
    </Style>

    <Style Selector="TextBlock.sub-title">
        <Setter Property="FontSize" Value="13" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{DynamicResource Brush.TextPrimary}" />
    </Style>

    <Style Selector="TextBlock.helper-text">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Foreground" Value="{DynamicResource Brush.TextSecondary}" />
    </Style>

    <Style Selector="TextBlock.success-text">
        <Setter Property="Foreground" Value="{DynamicResource Brush.Success}" />
    </Style>

    <Style Selector="TextBlock.warning-text">
        <Setter Property="Foreground" Value="{DynamicResource Brush.Warning}" />
    </Style>

    <Style Selector="TextBlock.danger-text">
        <Setter Property="Foreground" Value="{DynamicResource Brush.Danger}" />
    </Style>

    <Style Selector="TextBlock.mono-text">
        <Setter Property="FontFamily" Value="Consolas, Cascadia Mono, JetBrains Mono" />
    </Style>

    <Style Selector="Border.metric-card">
        <Setter Property="Background" Value="{DynamicResource Brush.SurfaceMuted}" />
        <Setter Property="BorderBrush" Value="{DynamicResource Brush.Border}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="{DynamicResource Radius.Small}" />
        <Setter Property="Padding" Value="10" />
    </Style>
</Styles>

