<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:SimsModDesktop.ViewModels"
             x:Class="SimsModDesktop.Views.Panels.FindDupPanelView"
             x:DataType="vm:MainWindowViewModel">
    <Border Classes="card-muted" Padding="10" IsVisible="{Binding IsFindDupVisible}">
        <StackPanel Spacing="10">
            <TextBlock Classes="section-title" Text="Duplicate File Scan" />
            <Grid ColumnDefinitions="180,*,Auto"
                  RowDefinitions="Auto,Auto"
                  RowSpacing="8"
                  ColumnSpacing="8">
                <TextBlock Grid.Row="0" VerticalAlignment="Center" Text="Scan Directory" />
                <TextBox Grid.Row="0" Grid.Column="1" Classes="path-field" Text="{Binding FindDup.RootPath}" />
                <Button Grid.Row="0" Grid.Column="2" Content="Browse" Command="{Binding BrowseFolderCommand}" CommandParameter="FindDupRootPath" />

                <TextBlock Grid.Row="1" VerticalAlignment="Center" Text="Optional Output CSV" />
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding FindDup.OutputCsv}" />
                <Button Grid.Row="1" Grid.Column="2" Content="Browse" Command="{Binding BrowseCsvPathCommand}" CommandParameter="FindDupOutputCsv" />
            </Grid>

            <Border Classes="card" Padding="10" Margin="0,8,0,0" IsVisible="{Binding IsToolkitAdvancedOpen}">
                <StackPanel Spacing="8">
                    <CheckBox Content="Recurse subdirectories" IsChecked="{Binding FindDup.Recurse}" />
                    <CheckBox Content="Clean up duplicate files" IsChecked="{Binding FindDup.Cleanup}" />
                    <TextBlock Classes="danger-text" TextWrapping="Wrap" Text="Danger: enabling Cleanup deletes duplicate files and keeps the first path. A second confirmation is required." />
                </StackPanel>
            </Border>
        </StackPanel>
    </Border>
</UserControl>


