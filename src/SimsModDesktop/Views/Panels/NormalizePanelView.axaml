<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:SimsModDesktop.ViewModels"
             x:Class="SimsModDesktop.Views.Panels.NormalizePanelView"
             x:DataType="vm:MainWindowViewModel">
    <Border Classes="card-muted" Padding="10" IsVisible="{Binding IsNormalizeVisible}">
        <StackPanel Spacing="10">
            <TextBlock Classes="section-title" Text="Normalize Directory (normalize)" />
            <Grid ColumnDefinitions="180,*,Auto" RowDefinitions="Auto" RowSpacing="8" ColumnSpacing="8">
                <TextBlock Grid.Row="0" VerticalAlignment="Center" Text="Root Path (RootPath)" />
                <TextBox Grid.Row="0" Grid.Column="1" Classes="path-field" Text="{Binding Normalize.RootPath}" />
                <Button Grid.Row="0" Grid.Column="2" Content="Browse" Command="{Binding BrowseFolderCommand}" CommandParameter="NormalizeRootPath" />
            </Grid>
            <TextBlock Classes="helper-text" Text="Use this to normalize file names and directory structure." />
        </StackPanel>
    </Border>
</UserControl>

