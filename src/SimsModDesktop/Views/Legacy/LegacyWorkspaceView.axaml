<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:SimsModDesktop.Models"
             xmlns:panels="clr-namespace:SimsModDesktop.Views.Panels"
             xmlns:vm="clr-namespace:SimsModDesktop.ViewModels"
             mc:Ignorable="d"
             x:Class="SimsModDesktop.Views.Legacy.LegacyWorkspaceView"
             x:DataType="vm:MainWindowViewModel">
    <Grid RowDefinitions="*,Auto" RowSpacing="12">
        <Grid>
            <Border Classes="card" IsVisible="{Binding IsToolkitWorkspace}" Padding="12">
                <Grid RowDefinitions="Auto,Auto,*" RowSpacing="12">
                    <Border Classes="card-muted" Padding="10">
                        <Grid ColumnDefinitions="Auto,190,*" ColumnSpacing="8">
                            <TextBlock VerticalAlignment="Center" Text="Action" />
                            <ComboBox Grid.Column="1" Width="180" ItemsSource="{Binding AvailableToolkitActions}" SelectedItem="{Binding SelectedAction}" />
                            <TextBlock Grid.Column="2" VerticalAlignment="Center" Classes="helper-text" Text="Select an action, adjust parameters, then run." />
                        </Grid>
                    </Border>

                    <Border Grid.Row="1" Classes="card-muted" Padding="10">
                        <StackPanel Spacing="6">
                            <TextBlock Classes="sub-title" Text="Validation Status" />
                            <TextBlock TextWrapping="Wrap" Text="{Binding ValidationSummaryText}" />
                        </StackPanel>
                    </Border>

                    <ScrollViewer Grid.Row="2">
                        <StackPanel Spacing="12">
                            <panels:OrganizePanelView />
                            <panels:FlattenPanelView />
                            <panels:NormalizePanelView />
                            <panels:MergePanelView />
                            <panels:FindDupPanelView />
                            <panels:TrayDependenciesPanelView />
                            <Border Classes="card-muted"
                                    Padding="10"
                                    IsVisible="{Binding IsSharedFileOpsVisible}">
                                <Grid ColumnDefinitions="210,*"
                                      RowDefinitions="Auto,Auto,Auto,Auto"
                                      RowSpacing="8"
                                      ColumnSpacing="8">
                                    <TextBlock Grid.ColumnSpan="2"
                                               Classes="sub-title"
                                               Text="Shared File Operation Options (Flatten / Merge / FindDuplicates)" />

                                    <CheckBox Grid.Row="1"
                                              Grid.Column="1"
                                              Content="Skip empty directory cleanup (SkipPruneEmptyDirs)"
                                              IsChecked="{Binding SharedFileOps.SkipPruneEmptyDirs}" />
                                    <CheckBox Grid.Row="2"
                                              Grid.Column="1"
                                              Content="Process mod files only (ModFilesOnly)"
                                              IsChecked="{Binding SharedFileOps.ModFilesOnly}" />
                                    <CheckBox Grid.Row="3"
                                              Grid.Column="1"
                                              Content="Verify content on name conflicts (VerifyContentOnNameConflict)"
                                              IsChecked="{Binding SharedFileOps.VerifyContentOnNameConflict}" />
                                </Grid>
                            </Border>

                            <Border Classes="card-muted"
                                    Padding="10"
                                    IsVisible="{Binding IsSharedFileOpsVisible}">
                                <Grid ColumnDefinitions="210,*" ColumnSpacing="8">
                                    <TextBlock VerticalAlignment="Center" Text="Extensions (ModExtensions)" />
                                    <TextBox Grid.Column="1" Text="{Binding SharedFileOps.ModExtensionsText}" />
                                </Grid>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>

            <Border Classes="card" IsVisible="{Binding IsTrayPreviewWorkspace}" Padding="12">
                <Grid RowDefinitions="Auto,Auto,*" RowSpacing="12">
                    <Border Classes="card-muted" Padding="10">
                        <Grid RowDefinitions="Auto,Auto" RowSpacing="8">
                            <Grid ColumnDefinitions="130,*,Auto,Auto,Auto" ColumnSpacing="8">
                                <TextBlock VerticalAlignment="Center" Text="Tray Path (TrayPath)" />
                                <TextBox Grid.Column="1" Classes="path-field" Text="{Binding TrayPreview.TrayRoot}" />
                                <Button Grid.Column="2" Classes="secondary" Content="Browse" Command="{Binding BrowseFolderCommand}" CommandParameter="PreviewTrayRoot" />
                                <Button Grid.Column="3" Classes="primary" Content="Load Dashboard" Command="{Binding RunTrayPreviewCommand}" />
                                <Button Grid.Column="4" Classes="secondary" Content="Advanced Options" Command="{Binding ToggleTrayPreviewAdvancedCommand}" />
                            </Grid>
                            <TextBlock Grid.Row="1" Classes="helper-text" Text="Supports paging and lazy cache; default is 50 items per page." />
                        </Grid>
                    </Border>

                    <Border Grid.Row="1"
                            Classes="card-muted"
                            Padding="10"
                            Margin="0,8,0,0"
                            IsVisible="{Binding IsTrayPreviewAdvancedOpen}">
                        <Grid ColumnDefinitions="130,*,130,*" RowDefinitions="Auto,Auto" RowSpacing="8" ColumnSpacing="8">
                            <TextBlock VerticalAlignment="Center" Text="Tray Item Key (TrayItemKey)" />
                            <TextBox Grid.Column="1" Watermark="0x1234567890ABCDEF" Text="{Binding TrayPreview.TrayItemKey}" />
                            <TextBlock Grid.Column="2" VerticalAlignment="Center" Text="TopN" />
                            <TextBox Grid.Column="3" Watermark="empty=all" Text="{Binding TrayPreview.TopNText}" />

                            <TextBlock Grid.Row="1" VerticalAlignment="Center" Text="Files Per Item (FilesPerItem)" />
                            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding TrayPreview.FilesPerItemText}" />
                            <TextBlock Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" Classes="helper-text" Text="Paging" />
                            <TextBlock Grid.Row="1" Grid.Column="3" VerticalAlignment="Center" Classes="helper-text" Text="Fixed at 50 items/page with lazy cache enabled." />
                        </Grid>
                    </Border>

                    <Border Grid.Row="2" Classes="card-muted" Padding="10">
                        <Grid RowDefinitions="Auto,*,Auto" RowSpacing="8">
                            <TextBlock Text="{Binding PreviewSummaryText}" />
                            <ListBox Grid.Row="1" ItemsSource="{Binding PreviewItems}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate x:DataType="models:SimsTrayPreviewItem">
                                        <Border Classes="card" Margin="0,0,0,8" Padding="8">
                                            <StackPanel Spacing="4">
                                                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="8">
                                                    <TextBlock FontWeight="SemiBold" Text="{Binding TrayItemKey}" />
                                                    <TextBlock Grid.Column="1" Classes="helper-text" Text="{Binding PresetType}" />
                                                </Grid>
                                                <Grid ColumnDefinitions="Auto,Auto,Auto,*" ColumnSpacing="8">
                                                    <TextBlock Text="Files:" />
                                                    <TextBlock Grid.Column="1" Text="{Binding FileCount}" />
                                                    <TextBlock Grid.Column="2" Text="Size(MB):" />
                                                    <TextBlock Grid.Column="3" Text="{Binding TotalMB}" />
                                                </Grid>
                                                <TextBlock Classes="helper-text" Text="{Binding LatestWriteTimeLocal}" />
                                                <TextBlock Classes="helper-text" Text="{Binding Extensions}" />
                                                <TextBlock Classes="helper-text" Text="{Binding ResourceTypes}" />
                                                <TextBlock TextWrapping="Wrap" Text="{Binding FileListPreview}" />
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                            <Grid Grid.Row="2" ColumnDefinitions="Auto,Auto,Auto,*,Auto" ColumnSpacing="8">
                                <Button Content="Prev Page" Command="{Binding PreviewPrevPageCommand}" />
                                <Button Grid.Column="1" Content="Next Page" Command="{Binding PreviewNextPageCommand}" />
                                <TextBlock Grid.Column="2" VerticalAlignment="Center" Text="{Binding PreviewPageText}" />
                                <TextBlock Grid.Column="4" VerticalAlignment="Center" Classes="helper-text" Text="{Binding PreviewLazyLoadText}" />
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <Border Grid.Row="1" Classes="card" Padding="12" IsVisible="{Binding IsToolkitWorkspace}">
            <Grid RowDefinitions="Auto,Auto,Auto" RowSpacing="8">
                <Grid ColumnDefinitions="Auto,Auto,Auto,*" ColumnSpacing="10">
                    <Button Classes="primary" MinWidth="150" Content="Run" Command="{Binding RunActiveWorkspaceCommand}" />
                    <Button Grid.Column="1" Classes="danger" Content="Cancel" Command="{Binding CancelCommand}" />
                    <CheckBox Grid.Column="2" VerticalAlignment="Center" Content="WhatIf" IsChecked="{Binding WhatIf}" />
                    <TextBlock Grid.Column="3" VerticalAlignment="Center" Classes="helper-text" Text="{Binding StatusMessage}" />
                </Grid>

                <Grid Grid.Row="1" ColumnDefinitions="*,Auto" ColumnSpacing="8">
                    <ProgressBar Height="10"
                                 Minimum="0"
                                 Maximum="100"
                                 IsIndeterminate="{Binding IsProgressIndeterminate}"
                                 Value="{Binding ProgressValue}" />
                    <TextBlock Grid.Column="1" VerticalAlignment="Center" Classes="helper-text" Text="{Binding ProgressMessage}" />
                </Grid>

                <Border Grid.Row="2" Classes="card-muted" Padding="8">
                    <TextBlock TextWrapping="Wrap" Text="{Binding ValidationSummaryText}" />
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
