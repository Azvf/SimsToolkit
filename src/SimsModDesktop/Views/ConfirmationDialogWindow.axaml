<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dialogs="clr-namespace:SimsModDesktop.Infrastructure.Dialogs"
        x:Class="SimsModDesktop.Views.ConfirmationDialogWindow"
        x:DataType="dialogs:ConfirmationRequest"
        Width="500"
        Height="250"
        MinWidth="460"
        MinHeight="220"
        CanResize="False"
        WindowStartupLocation="CenterOwner"
        Title="{Binding Title}">
    <Border Classes="card" Margin="14" Padding="14">
        <Grid RowDefinitions="Auto,*,Auto" RowSpacing="12">
            <TextBlock Classes="section-title" Text="{Binding Title}" />

            <StackPanel Grid.Row="1" Spacing="8">
                <TextBlock TextWrapping="Wrap" Text="{Binding Message}" />
                <TextBlock IsVisible="{Binding IsDangerous}"
                           Classes="danger-text"
                           Text="此操作可能删除文件，且不可撤销。" />
            </StackPanel>

            <Grid Grid.Row="2" ColumnDefinitions="*,Auto,Auto" ColumnSpacing="8">
                <TextBlock VerticalAlignment="Center" Classes="helper-text" Text="请确认后继续执行。" />
                <Button Grid.Column="1" Classes="secondary" Content="{Binding CancelText}" Click="CancelButton_OnClick" />
                <Button Grid.Column="2"
                        Classes="primary"
                        Content="{Binding ConfirmText}"
                        Click="ConfirmButton_OnClick" />
            </Grid>
        </Grid>
    </Border>
</Window>
