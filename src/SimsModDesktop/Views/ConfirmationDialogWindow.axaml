<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dialogs="clr-namespace:SimsModDesktop.Infrastructure.Dialogs"
        x:Class="SimsModDesktop.Views.ConfirmationDialogWindow"
        x:DataType="dialogs:ConfirmationRequest"
        Width="500"
        Height="250"
        MinWidth="460"
        MinHeight="220"
        CanResize="False"
        WindowStartupLocation="CenterOwner"
        Title="{Binding Title}">
    <Border Classes="card" Margin="14" Padding="14">
        <Grid RowDefinitions="Auto,*,Auto" RowSpacing="12">
            <TextBlock Classes="section-title" Text="{Binding Title}" />

            <StackPanel Grid.Row="1" Spacing="8">
                <TextBlock TextWrapping="Wrap" Text="{Binding Message}" />
                <TextBlock IsVisible="{Binding IsDangerous}"
                           Classes="danger-text"
                           Text="This action may delete files and cannot be undone." />
            </StackPanel>

            <Grid Grid.Row="2" ColumnDefinitions="*,Auto,Auto" ColumnSpacing="8">
                <TextBlock VerticalAlignment="Center"
                           Classes="helper-text"
                           IsVisible="{Binding ShowCancel}"
                           Text="Please confirm to continue." />
                <Button Grid.Column="1"
                        Classes="secondary"
                        IsVisible="{Binding ShowCancel}"
                        Content="{Binding CancelText}"
                        Click="CancelButton_OnClick" />
                <Button Grid.Column="2"
                        Classes="primary"
                        Content="{Binding ConfirmText}"
                        Click="ConfirmButton_OnClick" />
            </Grid>
        </Grid>
    </Border>
</Window>
